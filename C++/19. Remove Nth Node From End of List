class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
            ListNode* slow = head;
            ListNode* fast = head;
            int s = n - 1;
            while(n--)
            {
                    fast = fast -> next;                    
            }
            if(fast == NULL)
            {
                    return head -> next;
            }
            while(fast -> next)
            {
                    slow = slow -> next;
                    fast = fast -> next;
            }
            //cout<<slow -> val<<" "<<fast -> val<<endl;
            slow -> next = slow -> next -> next;
            
            return head;           
        
    }
};
